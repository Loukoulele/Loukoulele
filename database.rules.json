{
  "rules": {
    "saves": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "worldBoss": {
      "current": {
        ".read": true,
        "hp": {
          ".write": "auth != null"
        },
        "status": {
          ".write": "auth != null"
        }
      },
      "participants": {
        ".read": true,
        "$uid": {
          ".write": "auth != null && auth.uid == $uid"
        }
      },
      "claims": {
        ".read": true,
        "$uid": {
          ".write": "auth != null && auth.uid == $uid",
          ".validate": "!data.exists()"
        }
      },
      "nextSpawn": {
        ".read": true,
        ".write": false
      },
      "history": {
        ".read": true,
        ".write": false
      }
    }
  }
}
